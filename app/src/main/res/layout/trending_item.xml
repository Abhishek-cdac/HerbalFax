<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="#EFEFEF"
    android:padding="@dimen/_10sdp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:background="#EFEFEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imgcard"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="#EFEFEF"
                card_view:cardCornerRadius="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/imgprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profileimg" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rlcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgcard">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    card_view:cardBackgroundColor="@color/green"
                    card_view:cardCornerRadius="@dimen/_20sdp"
                    card_view:cardElevation="4dp"
                    card_view:contentPadding="3dp">

                    <!--Text View over Card View-->
                    <TextView
                        android:id="@+id/headingTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:text="Tutorial"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/subHeadingTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview"
                    android:fontFamily="@font/raleway_semibold"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Release of Letraset sheets containing "
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subHeadingTxt"
                    android:layout_marginBottom="@dimen/_2sdp">

                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_icon_open_clock" />

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/timeTxt"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_regular"
                            android:text="32 min ago"
                            android:textColor="@color/black"
                            android:textSize="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@+id/llTime"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_icon__user" />

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/personTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_regular"

                            android:text="by mayuri dayla"
                            android:textColor="@color/black"
                            android:textSize="10dp" />
                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>

        <!-- Horizontal line -->
        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#ababab">

        </View>
    </LinearLayout>

</androidx.cardview.widget.CardView>
