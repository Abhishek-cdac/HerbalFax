<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/green"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/nav_headerMAin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/closeImg"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_110sdp"
        android:backgroundTint="#A5FF00"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="fitXY"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:src="@drawable/sbdx3969"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/_90sdp"
                android:background="@drawable/edit_icon" />
        </androidx.cardview.widget.CardView>
<!--
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:src="@drawable/sbdx3969"
            android:scaleType="fitCenter"
            app:riv_corner_radius="@dimen/_10sdp"
            app:riv_border_width="2dip"
            app:riv_border_color="#A5FF00"
            app:riv_mutate_background="true"
            tools:ignore="MissingClass"
            android:layout_height="@dimen/_110sdp"
            android:layout_width="@dimen/_110sdp"/>
-->

    </FrameLayout>


    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_gravity="center"
        android:fontFamily="@font/raleway_semibold"
        android:text="Nick Johnson"
        android:textSize="@dimen/_18sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView

        android:layout_gravity="center"
        android:id="@+id/professionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopkeeper" />

</LinearLayout>
