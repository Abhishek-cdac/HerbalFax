<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/profileimg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight=".8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:text="Added :"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/userNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Mark mittal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:background="@drawable/edittext_border_bg"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_icon_awesome_users" />

                <TextView
                    android:id="@+id/privacyTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:text="Public"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_icon_black_arrow_down" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/questionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="How much it is for USA visa"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/likeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight=".2"
                android:fontFamily="@font/raleway_semibold"
                android:padding="@dimen/_5sdp"
                android:text="Like"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/shareTxt"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_icon_share"
                android:drawablePadding="@dimen/_20sdp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/share"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/favImg"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/ic_heart_green_border" />

            <TextView
                android:id="@+id/favTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight=".2"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/raleway_semibold"
                android:padding="@dimen/_5sdp"
                android:text="Favourite"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/answerTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/comment_green"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/raleway_semibold"
                android:text="3 answer"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>