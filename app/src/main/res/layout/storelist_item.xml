<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/cardview"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/StoreImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/conroy"
            android:visibility="visible" />

        <TextView
            android:id="@+id/StoreNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StoreImg"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="left"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/StorecategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StoreNameText"
            android:layout_gravity="left"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="@color/green"
            android:textSize="@dimen/_12sdp" />
        <LinearLayout
            android:id="@+id/rating_ll"
            android:layout_below="@+id/StorecategoryText"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/one"
                android:layout_width="9dp"
                android:src="@drawable/ic_icon_metro_star_full_lightgreen"
                android:layout_height="9dp"/>
            <ImageView
                android:id="@+id/two"
                android:layout_width="9dp"
                android:src="@drawable/ic_icon_metro_star_full_lightgreen"
                android:layout_height="9dp"/>

            <ImageView
                android:id="@+id/three"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_icon_metro_star_full_lightgreen" />

            <ImageView
                android:id="@+id/four"
                android:layout_width="9dp"
                android:src="@drawable/ic_icon_metro_star_full_lightgreen"
                android:layout_height="9dp"/>

            <ImageView
                android:id="@+id/five"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icon_metro_star_full_lightgreen" />

        </LinearLayout>


        <TextView
            android:id="@+id/StoreAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_ll"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_icon_menu_map_pin_black"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:maxLines="2"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text=" "
            android:textColor="@color/green"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:layout_below="@+id/StoreAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_icon_open_clock_black"
                android:layout_width="15dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:id="@+id/StoreTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:layout_marginRight="@dimen/_4sdp"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Monday"
                android:textColor="@color/green"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/StoreText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_icon_feather_eye_black"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="8AM-9PM"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>