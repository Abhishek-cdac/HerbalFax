<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/cardview"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/StoreImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:src="@drawable/conroy"
            android:visibility="visible" />

        <TextView
            android:id="@+id/StoreNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StoreImg"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="left"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/StorecategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StoreNameText"
            android:layout_gravity="left"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="@color/green"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/StoreAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StorecategoryText"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_icon_menu_map_pin_black"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:maxLines="2"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text=" "
            android:textColor="@color/green"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_below="@+id/StoreAddressText"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/one"
                android:layout_width="15dp"
                android:src="@drawable/ic_icon_metro_star_full_yellow"
                android:layout_height="15dp"/>
            <ImageView
                android:id="@+id/two"
                android:layout_width="15dp"
                android:src="@drawable/ic_icon_metro_star_full_yellow"
                android:layout_height="15dp"/>
            <ImageView
                android:id="@+id/three"
                android:layout_width="15dp"
                android:src="@drawable/ic_icon_metro_star_full_yellow"
                android:layout_height="15dp"/>
            <ImageView
                android:id="@+id/four"
                android:layout_width="15dp"
                android:src="@drawable/ic_icon_metro_star_full_yellow"
                android:layout_height="15dp"/>

            <ImageView
                android:id="@+id/five"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_icon_metro_star_full_yellow" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>