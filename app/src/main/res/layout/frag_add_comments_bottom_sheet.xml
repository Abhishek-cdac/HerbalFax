<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/addcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add comments"
        android:fontFamily="@font/raleway_bold"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:id="@+id/commentprofile"
        android:layout_below="@id/addcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectanglecommentprofile"
            android:padding="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Jakrbag"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_50sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession:"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/green"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_20sdp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/comments"
        android:layout_below="@id/commentprofile"
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edit_text_border"
        android:gravity="top"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_150sdp"
        android:hint="Type your comment here"
        android:elevation="@dimen/_10sdp"
        android:textColorHint="@color/text_grey"
        android:fontFamily="@font/raleway_medium"
        android:textSize="@dimen/_15sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comments">
        <TextView
            android:id="@+id/submitcomment"
            android:layout_below="@id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_corner_view_text"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="SUBMIT"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>