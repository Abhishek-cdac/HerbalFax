<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vendor.sellerdeals.SellerDealsDetailsActivity">

    <LinearLayout
        android:id="@+id/headeradd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_icon_arrow_left_white" />

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Driver Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/download"
                    />
            </FrameLayout>

            <TextView
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handmade"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"/>

            <TextView
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_icon_feather_map_pin"
                android:drawablePadding="@dimen/_10sdp"
                android:text="466 Salvatore Green"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/raleway_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_28sdp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/rating"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="90+ Bought"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_icon_awesome_calendar_alt"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Validity Till: 07/13/21"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"/>

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Price: $217"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:text="Users who bought the deals"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/raleway_semibold"/>

    <androidx.cardview.widget.CardView

        android:layout_below="@id/headeradd"
        android:id="@+id/searchcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:padding="@dimen/_20sdp"
        android:clipChildren="false"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/_40sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_button"
                android:layout_marginRight="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_search_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/raleway_regular"
                android:hint="Search"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/_12sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_weight="0.2"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Sr."
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/raleway_bold"/>

            <TextView
                android:layout_weight="0.6"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/raleway_bold"/>

            <TextView
                android:layout_weight="0.2"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Profile ID"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/raleway_bold"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/customersdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>