<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vendor.Profile.PickupIdActivity">

    <LinearLayout
        android:id="@+id/headeradd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_icon_arrow_left_white" />

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Pick Up ID: HF215456"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_26sdp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">
                <LinearLayout
                    android:id="@+id/orersdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ordersidactivity"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_35sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay Roll"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:fontFamily="@font/raleway_semibold">
                        </TextView>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_regular">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$30"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_bold">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_regular">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_bold">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Data"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_regular">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12/06/2021"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_regular">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_regular">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="On the way"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:fontFamily="@font/roboto_regular">
                            </TextView>
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/pickupprofiledetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_120sdp"
            android:background="@color/green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:src="@drawable/profilepic"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/orderbyid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order By:"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/orderbyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alex .C"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/orderbyname3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop Off Address -"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/orderbyname5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9292 The Grove Reading RG73 Qua"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group_3096"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"/>

            </LinearLayout>


        </FrameLayout>

        <Button
            android:id="@+id/submitpickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickupprofiledetails"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/rounded_corner_view_text_black"
            android:gravity="center"

            android:padding="@dimen/_10sdp"
            android:text="ASSIGN DRIVER"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/shippingdelivery"
            android:layout_below="@id/submitpickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping/Delivery"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>


        <TextView

            android:layout_below="@id/submitpickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Tracking ID"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <EditText
            android:id="@+id/trackingid"
            android:layout_below="@id/shippingdelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="109191968465"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/trackingidtxt"
            android:layout_below="@id/trackingid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracking Website Link"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <EditText
            android:layout_below="@id/trackingidtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="herbalfax.com/trackproduct"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            />

    </RelativeLayout>

</LinearLayout>