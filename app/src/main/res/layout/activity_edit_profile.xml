<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">


        <ImageView

            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_icon_arrow_left_white" />

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/editprofile"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp">

        </TextView>




    </LinearLayout>

</LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">



        <LinearLayout

            android:id="@+id/textbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"

                app:cardBackgroundColor="@color/white"

                app:cardCornerRadius="@dimen/_5sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/dashed_border"
                        android:fontFamily="@font/raleway_regular"
                        android:padding="@dimen/_30sdp"
                        android:src="@drawable/ic_icon_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/uploadPic"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/name"
                android:drawableRight="@drawable/mandatory"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"

                app:cardBackgroundColor="@color/white">

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_button"
                    android:drawableEnd="@drawable/ic_person"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="@string/name_hint"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/birthday"
                android:drawableRight="@drawable/mandatory"

                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"

                app:cardBackgroundColor="@color/white">

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_button"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="@string/birthday_hint"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/gender"
                android:drawableRight="@drawable/mandatory"

                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <RadioButton
                    app:buttonTint="@color/black"
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_regular"
                    android:text="@string/male"
                    android:textColor="@color/text_grey" />

                <RadioButton
                    android:padding="@dimen/_5sdp"

                    android:id="@+id/radioButton2"
                    android:fontFamily="@font/raleway_regular"
                    app:buttonTint="@color/black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textColor="@color/text_grey"
                    />

                <RadioButton
                    android:padding="@dimen/_5sdp"

                    android:id="@+id/radioButton3"
                    android:fontFamily="@font/raleway_regular"
                    app:buttonTint="@color/black"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Other"
                    android:textColor="@color/text_grey"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/selectProfession"
                android:drawableRight="@drawable/mandatory"

                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"

                app:cardBackgroundColor="@color/white">

                <EditText
                    android:id="@+id/professionedt"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_button"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/_5sdp"

                    android:fontFamily="@font/raleway_regular"
                    android:hint="@string/profession_hint"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/city"
                android:drawableRight="@drawable/mandatory"

                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"

                app:cardBackgroundColor="@color/white">

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_button"
                    android:drawableEnd="@drawable/ic_building"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="@string/city_hint"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/zip"
                android:drawableRight="@drawable/mandatory"

                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                card_view:cardElevation="8dp"
                card_view:cardPreventCornerOverlap="false"

                app:cardBackgroundColor="@color/white">

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_button"
                    android:drawableEnd="@drawable/ic_zipcode"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="@string/zip_hint"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/mobileNumber"                android:drawableRight="@drawable/mandatory"


                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    card_view:cardElevation="8dp"
                    card_view:cardPreventCornerOverlap="false"

                    app:cardBackgroundColor="@color/white">

                    <EditText

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_button"
                        android:drawablePadding="@dimen/_5sdp"
                        android:fontFamily="@font/raleway_regular"
                        android:gravity="center"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:text="+91"
                        android:textColor="@color/text_grey"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />
                    -->
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_5sdp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    card_view:cardElevation="8dp"
                    card_view:cardPreventCornerOverlap="false"

                    app:cardBackgroundColor="@color/white">

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_button"
                        android:drawableEnd="@drawable/ic_icon_mobile"
                        android:drawablePadding="@dimen/_5sdp"

                        android:fontFamily="@font/raleway_regular"
                        android:hint="@string/mob_hint"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/text_grey"
                        android:textColorHint="@color/text_grey"
                        android:textSize="@dimen/_12sdp" />
                    -->
                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rect_button_green"
                android:elevation="@dimen/_15sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/uploadProfile"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>