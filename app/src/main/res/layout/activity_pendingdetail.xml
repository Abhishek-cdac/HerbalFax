<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PendingdetailActivity"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_icon_arrow_left_white" />

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Blick - Glover"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_15sdp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="@dimen/_7sdp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:id="@+id/uppercard"
                app:cardElevation="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/imgcard"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/imgprofile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pendingimage" />

                    </androidx.cardview.widget.CardView>


                    <RelativeLayout
                        android:id="@+id/rlcard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgcard"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/subHeadingTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:maxLines="2"
                            android:padding="@dimen/_2sdp"
                            android:text="Pre Roll"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:id="@+id/trendingcv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/subHeadingTxt"
                            android:gravity="center">


                            <TextView
                                android:id="@+id/headingTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center_vertical"
                                android:text="@string/price"
                                android:textColor="@color/text_grey"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/priceTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_vertical"
                                android:text="$30"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/quantitycv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/trendingcv"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/quantityTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center_vertical"

                                android:text="@string/quantity"
                                android:textColor="@color/text_grey"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_vertical"
                                android:text="4"
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/categoryRl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/quantitycv">

                            <TextView
                                android:id="@+id/categoryTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="Drop Shipping"
                                android:textColor="@color/text_grey"
                                android:textSize="12dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center_vertical"

                                android:layout_alignParentEnd="true"
                                android:text="12/06/2021"
                                android:textColor="@color/text_grey"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/categoryRl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="Status"
                                android:textColor="@color/text_grey"
                                android:textSize="12dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center_vertical"

                                android:layout_alignParentEnd="true"
                                android:text="Ongoing"
                                android:textColor="@color/text_grey"
                                android:textSize="12dp" />
                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/_140sdp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="top"
                    android:src="@drawable/pendingprofile1"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_15sdp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/raleway_regular"
                        android:text="Order By:"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:text="Alex .C"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/raleway_semibold"
                        android:text="Drop Off Address -
"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:text="9292 The Grove Reading RG73 Qua"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </LinearLayout>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_group_3096"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--  <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

          </androidx.cardview.widget.CardView>-->

        <Button
            android:id="@+id/creditcard_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/_15sdp"

            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rect_button_black"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="assign driver"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:text="Shipping/Delivery"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:text="Add Tracking ID"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@color/green"
            android:textSize="14dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_25sdp"
            app:cardPreventCornerOverlap="false">

            <EditText
                android:id="@+id/editetext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_button"
                android:hint="trackinng id"
                android:layout_marginLeft="@dimen/_15sdp"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:text="Tracking Website Link"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@color/green"
            android:textSize="14dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_25sdp"
            app:cardPreventCornerOverlap="false">

            <EditText
                android:id="@+id/editetext2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_button"
                android:hint="herbalfax.com/trackproduct"
                android:layout_marginLeft="@dimen/_15sdp"
                />



        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>