<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCustomerSignUpScTen"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/raleway_semibold"
            android:text="What's next?"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_22sdp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center_vertical"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_150sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_border_green"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:textColor="#97C93C"
            android:drawablePadding="@dimen/_15sdp"
            android:layout_gravity="top"
            android:drawableLeft="@drawable/ic_icon_feather_check"
            android:text="Congratulations! Your account has been successfully created!"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_244sdp"
        android:layout_height="@dimen/_214sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/undraw_my_location_re_r52x"/>

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your first location"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="@dimen/_5sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In order to manage your business, add a location: it's free and only takes a minute."
        android:textColor="#8E8E8E"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/poppins_medium"
        android:padding="@dimen/_5sdp"/>
    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rect_button_black"
        android:elevation="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:onClick="@{(v) -> SignUpNewAsCustomerViewModel.onNextHere(v)}"
        android:paddingHorizontal="@dimen/_40sdp"
        android:text="Go to account settings"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp" />

    <Button
        android:id="@+id/add_location_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rect_button_green"
        android:elevation="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:onClick="@{(v) -> SignUpNewAsCustomerViewModel.onNextHere(v)}"
        android:paddingHorizontal="@dimen/_40sdp"
        android:text="Add a location"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp" />







</LinearLayout>