<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewVendorSignUpSc5"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">


    <LinearLayout
        android:id="@+id/add_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_awesome_arrow_left"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/_5sdp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/raleway_semibold"
            android:text="Add your business"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_22sdp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>







    <TextView
        android:id="@+id/yourbusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_title_layout"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:text="Business categories"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sdp" />
    <LinearLayout
        android:id="@+id/business_categories"
        android:layout_below="@+id/yourbusiness"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/card_border_green_out_line"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8E8E8E"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:text="Pizza, Hair Salon, Plumbing"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selected_category_layout"
        android:layout_width="wrap_content"
        android:layout_below="@+id/business_categories"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:weightSum="1"
        android:background="@drawable/card_border_green"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#97C93C"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:text="Home Garden > Kitchen  Bath"/>

        <ImageView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_icon_ionic_ios_close"/>
    </LinearLayout>


    <Button
        android:id="@+id/add_location_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_button_green"
        android:elevation="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:onClick="@{(v) -> SignUpNewAsCustomerViewModel.onNextHere(v)}"
        android:paddingHorizontal="@dimen/_40sdp"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp" />

</RelativeLayout>