<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:clipChildren="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_20sdp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rect_button"
                    android:drawableLeft="@drawable/ic_search_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_regular"
                    android:hint="@string/search"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/dailyBlogLl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/blog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/daily_blog"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trendingText"
                android:background="@drawable/rect_button_green"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:text="@string/trending"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/recentText"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="35dp"
                android:background="@drawable/rect_button_light_green"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:text="@string/recent"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:id="@+id/popularText"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingBottom="@dimen/_2sdp"
                android:background="@drawable/rect_button_light_green"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:text="@string/popular"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/rect_button_green"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"

                android:gravity="center"
                android:paddingTop="@dimen/_7sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_7sdp">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/trending_icon" />

                <TextView
                    android:id="@+id/trendingText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_medium"
                    android:gravity="center"
                    android:text="@string/trending"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:background="@drawable/rect_button_light_green"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/recent_icon" />


                <TextView
                    android:id="@+id/recentText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/raleway_medium"
                    android:gravity="center"
                    android:text="@string/recent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <!--light green DCF8A7-->
            <LinearLayout
                android:visibility="gone"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/rect_button_light_green"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center"
                android:paddingTop="@dimen/_7sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_7sdp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp"
                    android:visibility="gone"
                    android:src="@drawable/popular_icon" />


                <TextView
                    android:id="@+id/articleText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/raleway_medium"
                    android:gravity="center"
                    android:text="@string/popular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </LinearLayout>

        <!--Recycler View widget-->

        <com.herbal.herbalfax.customer.homescreen.feed.videoplay.AAH_CustomRecyclerView
            android:id="@+id/feedrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:layoutAnimation="@anim/layout_animation"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/_40sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="No Post available"
            android:textColor="@color/black"
            android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>