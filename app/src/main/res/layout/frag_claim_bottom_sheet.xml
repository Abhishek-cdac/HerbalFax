<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/heading_txt"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/do_you_really_want_to_stop_claiming_this_business"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_24sdp" />

    <View
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:outlineAmbientShadowColor="@color/text_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/subheading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center"
        android:text="You will loose all your progress, are you sure?"
        android:fontFamily="@font/raleway_regular"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/_18sdp" />


    <Button
        android:id="@+id/yes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rect_button_black"
        android:layout_gravity="left"
        android:text="Yes, Stop claiming now"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <Button
        android:id="@+id/no_btn"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rect_button_green"
        android:layout_gravity="left"
        android:text="No , Continue claiming"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>