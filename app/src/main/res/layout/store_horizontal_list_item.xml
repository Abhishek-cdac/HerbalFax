<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="@dimen/_195sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="5dp"


    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/StoreImg"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/conroy"
            android:visibility="visible" />

        <TextView
            android:id="@+id/StoreNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StoreImg"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/raleway_semibold"
            android:text="Conroy's mart"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/StorecategoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StoreNameText"
            android:layout_gravity="left"
            android:padding="@dimen/_2sdp"
            android:fontFamily="@font/raleway_semibold"
            android:text="Conroy's mart"
            android:textColor="@color/green"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/locationHeader"
            android:layout_width="match_parent"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StorecategoryText"
            android:weightSum="1">

            <TextView
                android:id="@+id/StoreAddressText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight=".8"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableLeft="@drawable/ic_icon_feather_map_pin_greennnn"
                android:fontFamily="@font/raleway_medium"
                android:text="Pune"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/roboto_regular"
                android:gravity="right"
                android:text="11 Ratings"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/locationHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:padding="@dimen/_2sdp"
                android:text="Open-Closed"
                android:textColor="@color/green"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/raleway_semibold"
                android:padding="@dimen/_2sdp"
                android:text="9:00 AM to 8:00 PM"
                android:textColor="@color/black"
                android:textSize="10dp" />


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>