<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.homescreen.group.groupdetail.GroupDetailActivity">
    <LinearLayout
        android:id="@+id/headeradd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_icon_arrow_left_white"
            android:contentDescription="" />

        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/groupImg"
                android:elevation="@dimen/_8sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/profileimg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/groupTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginRight="80dp"
                    android:layout_weight=".8"
                    android:gravity="center_vertical"
                    android:text="group name"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginRight="80dp"
                        android:gravity="center_vertical"
                        android:text="Group Type"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/green"
                        android:textSize="14dp" />
                    <TextView
                    android:id="@+id/groupType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginRight="80dp"
                   android:gravity="center_vertical"
                    android:text=""
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img1"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="30dp"
                            android:src="@drawable/addpeople" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img2"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:src="@drawable/addpeople" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img3"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:src="@drawable/addpeople" />

                    </FrameLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginRight="80dp"
                        android:gravity="center_vertical"
                        android:text="member"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                    <TextView
android:id="@+id/memberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginRight="80dp"
                        android:gravity="center_vertical"
                        android:text="10"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView

                        android:id="@+id/addPostTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:gravity="center_vertical"
                        android:background="@color/light_green"
                        android:text="Add Post"
                        android:drawablePadding="@dimen/_2sdp"
                        android:drawableTop="@drawable/ic_icon_add_post_green"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
           </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--Recycler View widget-->

    <com.herbal.herbalfax.customer.homescreen.feed.videoplay.AAH_CustomRecyclerView
        android:id="@+id/feedrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:layoutAnimation="@anim/layout_animation"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="No Post available"
        android:textColor="@color/black"
        android:visibility="gone" />

</LinearLayout>